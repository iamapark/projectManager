<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imagescroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/createsche_ac"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sname_edit"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#666666" />

        <EditText
            android:id="@+id/contents_edit"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:hint="일정에 대한 내용을 입력하세요"
            android:inputType="textMultiLine" />

        <ToggleButton
            android:id="@+id/toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/off"
            android:textOff=""
            android:textOn="" />

        <Button
            android:id="@+id/cs_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/submit_change" />


    </LinearLayout>

</LinearLayout>