<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/imagescroll"
 android:layout_height="fill_parent"
 android:layout_width="fill_parent" >
 
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/createsche_ac"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/sname_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="115dp" />

    <EditText
        android:id="@+id/contents_edit"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:hint="일정에 대한 내용을 입력하세요" />
    
    <DatePicker
        android:id="@+id/scheduleDDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="50dp" />

    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:textOff=""
        android:textOn=""
        android:background="@drawable/off" />
    
    <Button
        android:id="@+id/cs_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/submit_change" />

</LinearLayout>
</ScrollView>